<div class="container">
    <div class="row d-flex justify-content-around">
        <div class="col-11 card p-3 m-3 ">

            <div class="card col-11 m-3 p-3">
                <form id="issue-filter-form" method="post" action="/projects/filter_issues">
                    <input type="hidden" name="project" value="<%= project.id %>">
                    <div class="mb-3">
                        <label for="name"  class="form-label h4">Title</label>
                        <input type="text" class="form-control" id="name" name="title" placeholder="Issue's title">
                    </div>
                    <div class="mb-3">
                        <label for="des"  class="form-label h4">Description</label>
                        <input type="text" class="form-control" id="des" name="description" placeholder="Description of Issue">
                    </div>
                    <div class="mb-3">
                        <label for="author" class="form-label h4">Author</label>
                        <input type="text" class="form-control" id="author" name="author" placeholder="Issue's Author">
                    </div>
                    <div id="labels" class="mb-3">
                        <label class="form-label h4">Labels :</label>
                        <% for ( let label of project.labels ) {%>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="labels" value="<%= label%>">
                            <label class="form-check-label"><%= label %></label>
                        </div>
                        <% } %>
                    </div>
                    <div class="mb-3 d-flex flex-row-reverse">
                        <button type="submit" class="btn btn-dark">Filter Issue</button>
                    </div>
                </form>
            </div>

            <div class="col-11 card p-3 m-3">
                <h1 class="m-3">Filtered Issue List :</h1>
                <ul id="issues-list" class="d-flex flex-column text-center p-3 h4" style="list-style: none">
<!--                        <li class="col-11 m-2"><a href="/issues/${issue.id}">${issue.title}</a></li> -->
                </ul>
            </div>
        </div>
    </div>
</div>

<script src="/js/filter.js"></script>